<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/beigeCafe"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="text"
        android:textSize="20dp" />

    <Button
        android:id="@+id/moins1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/quantite1"
        android:layout_toStartOf="@+id/quantite1"
        android:layout_weight="1"
        android:text="-"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/quantite1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/plus1"
        android:layout_toStartOf="@+id/plus1"
        android:layout_weight="1"
        android:text="0"
        android:textAlignment="center"
        android:textSize="30dp" />

    <Button
        android:id="@+id/plus1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:text="+"
        android:textAlignment="center"
        android:textSize="30dp" />


</RelativeLayout>